<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/CSS/style.css" />
    <title>Pokédex</title>
  </head>
  <body>
    <nav>
      <input type="checkbox" id="nav" class="hidden" />
      <label for="nav" class="nav-open"><i></i><i></i><i></i></label>
      <div class="nav-container">
        <ul>
          <li><a href="/">HOME</a></li>
          <li><a href="/cadastro/">CADASTRAR</a></li>
          <li><a href="/#cards">POKEMON</a></li>
          <li><a href="/curiosidade">CURIOSIDADE</a></li>
        </ul>
      </div>
    </nav>
    <% if(message != "") {  %>
      <section id="message">
          <p><%= message %></p> <span id="close">&times;</span>
      </section>
  <% }  %>
    <main>
      <section class="cards">
        <h1>Pokédex</h1>
        <% pokedex.forEach((pokemon) =>{ %>
        <div class="card">
          <a class="card2" href="/detalhes/<%= pokedex.indexOf(pokemon) %>">
            <img src="<%= pokemon.imagem %>" alt="pokemon" />
            <h3 class="cadastroNumero">nº <%= pokemon.numero %></h3>
            <h2><%= pokemon.nome %></h2>
            <h3 class="cardTipo"><%= pokemon.tipo %></h3>

            <a id="editar" href="/cadastro/<%= pokemon.id %>">Editar</a>
            <a id="deletar" href="/deletar/<%= pokedex.indexOf(pokemon) %>"
              >Deletar</a
            >
          </a>
        </div>
        <% }) %>
      </section>
    </main>
      <footer>
        <a
          href="https://www.linkedin.com/in/kellbber-barcarolo-71a848230/"
          target="_blank"
          >Kellber Barcolo</a>
        <a href="https://www.linkedin.com/in/monicashdias/" target="_blank"
          >Monica Dias</a>
        <p>Todos os direitos reservados &copy;</p>
      </footer>
    <script src="/JS/script.js"></script>
  </body>
</html>
